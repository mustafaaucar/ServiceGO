<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.3/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet@1.9.3/dist/leaflet.js"></script>
<script>
    let map, marker;
    const API_BASE = "https://turkiyeapi.dev/api/v1";

    document.addEventListener("DOMContentLoaded", function () {
        const ilSelect = document.getElementById("il");
        const ilceSelect = document.getElementById("ilce");
        const mahalleSelect = document.getElementById("mahalle");

        const sokakInput = document.getElementById("sokak");
        const binaInput = document.getElementById("bina");

        // Harita kur
        map = L.map('map').setView([39.92077, 32.85411], 6);

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            maxZoom: 18,
            attribution: '© OpenStreetMap Katkıcıları'
        }).addTo(map);

        // Haritada tıklama ile marker belirleme
        map.on('click', function (e) {
            const lat = e.latlng.lat.toFixed(6);
            const lng = e.latlng.lng.toFixed(6);

            if (marker) {
                marker.setLatLng(e.latlng);
            } else {
                marker = L.marker(e.latlng).addTo(map);
            }

            document.getElementById("Latitude").value = lat;
            document.getElementById("Longitude").value = lng;
        });

        // İl verilerini yükle
        fetch(`${API_BASE}/provinces`)
            .then(res => res.json())
            .then(data => {
                data.data.forEach(il => {
                    const option = new Option(il.name, il.id);
                    ilSelect.appendChild(option);
                });
            });

        // İl seçildiğinde ilçe getir
        ilSelect.addEventListener("change", function () {
            const ilId = this.value;
            ilceSelect.innerHTML = '<option value="">İlçe Seçiniz</option>';
            mahalleSelect.innerHTML = '<option value="">Mahalle Seçiniz</option>';
            ilceSelect.disabled = true;
            mahalleSelect.disabled = true;

            const ilText = ilSelect.options[ilSelect.selectedIndex].text;
            zoomToAddress(ilText); // Harita İstanbul’a zoom yapsın

            if (!ilId) return;

            fetch(`${API_BASE}/districts?provinceId=${ilId}`)
                .then(res => res.json())
                .then(data => {
                    data.data.forEach(ilce => {
                        const option = new Option(ilce.name, ilce.id);
                        ilceSelect.appendChild(option);
                    });
                    ilceSelect.disabled = false;
                });
        });

        // İlçe seçildiğinde mahalle getir
        ilceSelect.addEventListener("change", function () {
            const ilceText = ilceSelect.options[ilceSelect.selectedIndex].text;
            const ilText = ilSelect.options[ilSelect.selectedIndex].text;

            zoomToAddress(`${ilceText}, ${ilText}`);

            const ilceId = this.value;
            mahalleSelect.innerHTML = '<option value="">Mahalle Seçiniz</option>';
            mahalleSelect.disabled = true;

            if (!ilceId) return;

            fetch(`${API_BASE}/neighborhoods?districtId=${ilceId}`)
                .then(res => res.json())
                .then(data => {
                    data.data.forEach(mahalle => {
                        const option = new Option(mahalle.name, mahalle.name);
                        mahalleSelect.appendChild(option);
                    });
                    mahalleSelect.disabled = false;
                });
        });

        // Mahalle seçildiğinde haritaya yaklaş
        mahalleSelect.addEventListener("change", function () {
            const mahalle = mahalleSelect.options[mahalleSelect.selectedIndex].text;
            const ilce = ilceSelect.options[ilceSelect.selectedIndex].text;
            const il = ilSelect.options[ilSelect.selectedIndex].text;

            zoomToAddress(`${mahalle}, ${ilce}, ${il}`);
        });

        // Adres birleştirme
        const form = document.getElementById("addPassengerForm");
        form.addEventListener("submit", function () {
            const il = ilSelect.options[ilSelect.selectedIndex].text;
            const ilce = ilceSelect.options[ilceSelect.selectedIndex].text;
            const mahalle = mahalleSelect.options[mahalleSelect.selectedIndex].text;
            const sokak = sokakInput.value;
            const bina = binaInput.value;

            const fullAddress = `${mahalle}, ${sokak} Sokak, No: ${bina}, ${ilce} / ${il}`;
            document.getElementById("Address").value = fullAddress;
        });

        // OSM Geocoding ile haritada zoom yap
        function zoomToAddress(query) {
            fetch(`https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(query)}`)
                .then(res => res.json())
                .then(data => {
                    if (data && data.length > 0) {
                        const loc = data[0];
                        map.setView([parseFloat(loc.lat), parseFloat(loc.lon)], 14);
                    }
                });
        }
    });
</script>